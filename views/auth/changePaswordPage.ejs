 <div class="row">
  <div class="col-md-12">
    <% if(errorMessage){ %>
      <div class="alert alert-dismissable alert-danger">
        <%= errorMessage %>
      </div>
    <% }; %>
  </div>
</div>

 <div class="row">
  <div class="col-md-12">

    <form name="changePaswordPage"  action="/usuario/<%= user.cpf %>/mudar-senha" method="post" class="form-horizontal">
      <fieldset>
        <legend>Mudar senha do <%= user.fullname %></legend>
        <div class="form-group">
          <label for="newPassword" class="col-lg-2 control-label">Nova senha</label>
          <div class="col-lg-10">
            <input name="newPassword" type="password" class="form-control" id="inputPassword" placeholder="Nova senha">
          </div>
        </div>
        <div class="form-group">
          <label for="confirmPassword" class="col-lg-2 control-label">Confirmar senha</label>
          <div class="col-lg-10">
            <input name="confirmPassword" type="password" class="form-control" id="inputPassword" placeholder="Confirmar senha">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Enviar</button>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </fieldset>
    </form>

  </div>
</div>