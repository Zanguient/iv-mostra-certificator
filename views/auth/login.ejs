 <div class="row">
  <div class="col-md-12">
    <% if(errorMessage){ %>
      <div class="alert alert-dismissable alert-danger">
        <%= errorMessage %>
      </div>
    <% }; %>
  </div>
</div>

 <div class="row">
  <div class="col-md-12">

    <form name="loginPageForm"  action="/login/" method="post" class="form-horizontal">
      <fieldset>
        <legend>Formulário de login</legend>
        <div class="form-group">
          <label for="inputEmail" class="col-lg-2 control-label">Email</label>
          <div class="col-lg-10">
            <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword" class="col-lg-2 control-label">Senha</label>
          <div class="col-lg-10">
            <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Senha">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Enviar</button>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </fieldset>
    </form>

  <div class="col-md-12">
    <p  class="text-right">
    <a href="/auth/recuperar-senha">Se você esqueceu o não tem uma senha clique aqui.</a>
    </p>
  </div>

  </div>
</div>