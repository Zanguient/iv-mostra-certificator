 <div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h3 class="user-fullname">Nome: <strong><%= user.fullname %></strong></h3>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">

    <% if(certificados && certificados.length){ %>
     <table class="table table-striped">
        <thead>
          <tr>
            <th>Tipo de certificado</th>
            <th>Link para baixar o certificado</th>
          </tr>
        </thead>
        <tbody>
          <% certificados.forEach(function(certificado){ %>
            <tr>
              <td>
                Certificado de <%= PDFService.getTemplateLabel(certificado.type) %><br>

                <% if(certificado.data && certificado.data.titulo){ %>
                  Titulo: <strong><%= certificado.data.titulo %></strong>
                <% } %>

              </td>
              <td>
                <a href="/usuario/<%= user.cpf %>/certificados/<%= certificado.id %>.pdf">
                  <span class="glyphicon glyphicon-download"></span> Baixar: Certificado de <%= PDFService.getTemplateLabel(certificado.type) %>
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>
        Nenhum certificado dispon√≠vel neste sistema.
      </p>
    <% } %>

    </div>

  </div>

</div>
